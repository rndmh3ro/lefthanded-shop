{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.7",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/all-in-one-wp-migration": "^6.38",
    "wpackagist-plugin/footer-javascript": "^0.4.1",
    "wpackagist-plugin/regenerate-thumbnails": "^2.2",
    "wpackagist-plugin/woocommerce-new-product-badge": "^0.3.0",
    "wpackagist-plugin/yith-woocommerce-wishlist": "^2.0",
    "wpackagist-plugin/homepage-control": "^2.0",
    "wpackagist-plugin/woocommerce-product-archive-customiser": "^1.0",
    "wpackagist-plugin/contact-form-7": "^4.6",
    "wpackagist-plugin/image-widget": "^4.2",
    "wpackagist-plugin/w3-total-cache": "0.9.5.1",
    "wpackagist-plugin/woocommerce-sold-out-products": "^1.0",
    "wpackagist-plugin/wysija-newsletters": "^2.7",
    "wpackagist-plugin/woocommerce": "^2.6",
    "wpackagist-plugin/wordpress-seo": "^4.0",
    "wpackagist-plugin/yith-woocommerce-compare": "^2.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
